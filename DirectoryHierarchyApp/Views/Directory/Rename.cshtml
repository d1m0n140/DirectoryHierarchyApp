@model DirectoryHierarchyApp.Models.Directory

@{
    ViewBag.Title = "Rename";
}

<h2>Parent: @Model.Path@Model.Name</h2>


@using (Html.BeginForm("Rename", "Directory"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Directory</h4>
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextBox("directoryName", Model.Name)
                @Html.Hidden("directoryId", Model.Id)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Rename" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

